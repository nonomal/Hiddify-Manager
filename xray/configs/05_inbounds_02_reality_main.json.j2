{
	{% if hconfigs['reality_enable'] %}
		"inbounds": [
			{% for d in domains if d['internal_port_reality'] and not d['grpc'] %}
			{%set domain=d['domain']%}
			{%set port=d['internal_port_reality']%}
			{
				"tag":"realityin_{{port}}",
				// "port": {{port}}, // This is TLS entrypoint. This entrypoint does the SSL Termination then routes the request based on the Path or ALPN type.
				"listen": "@@realityin_{{port}}",
				"protocol": "vless",
				"settings": {
				"decryption": "none",
				"clients": [
					{% for u in users %}
						{"id": "{{ u['uuid'] }}", "email": "{{ u['uuid'] }}@hiddify.com","flow": "xtls-rprx-vision"},
					{% endfor %}
				],
				"fallbacks": [
					{
						"alpn": "h4",
						"dest": "/opt/hiddify-manager/xray/run/vlessg.sock",
						"xver": 0
					},
					{
						"alpn": "h3",
						"dest": "/opt/hiddify-manager/xray/run/vlessg.sock",
						"xver": 0
					},
					{
						"alpn": "h2",
						"dest": "/opt/hiddify-manager/xray/run/vlessg.sock",
						"xver": 0
					},
					{
					"dest": "/opt/hiddify-manager/xray/run/vlessg.sock",
					"xver": 0
					}
				]
				},
				"streamSettings": {
				"network": "tcp",
				"tcpSettings": {
					"acceptProxyProtocol": true 
				},
				"security": "reality", 
				"realitySettings": {
						"show": false, 
						"dest": "{{domain}}:443", 
						"xver": 0,
						"serverNames": [ 
							"{{domain}}"
						],
						"privateKey": "{{hconfigs['reality_private_key']}}",
						"shortIds": [ 
							"", 
							{%for sid in hconfigs['reality_short_ids'].split(',') %}
							"{{sid}}",
							{%endfor%}
						]
				}
				},
				"sniffing": {
				"enabled": true,
				"destOverride": ["http","tls","quic"]
				}
			},
			{%endfor%}	  
		]
	{% endif %}
}
